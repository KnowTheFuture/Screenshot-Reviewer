{
    "name": "screenshot-reviewer-frontend",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@tanstack/react-query": "^5.59.0",
        "axios": "^1.7.3",
        "clsx": "^2.1.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-hotkeys-hook": "^5.1.0",
        "zustand": "^5.0.8"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.14",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react": "^4.3.1",
        "autoprefixer": "^10.4.21",
        "eslint": "^9.9.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.35.0",
        "postcss": "^8.5.6",
        "prettier": "^3.3.3",
        "tailwindcss": "^4.1.14",
        "vite": "^5.4.10"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended",
            "prettier"
        ],
        "plugins": [
            "react"
        ],
        "env": {
            "browser": true,
            "es2021": true
        },
        "parserOptions": {
            "ecmaFeatures": {
                "jsx": true
            },
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "rules": {
            "react/react-in-jsx-scope": "off"
        }
    },
    "prettier": {
        "singleQuote": false,
        "semi": true,
        "printWidth": 100,
        "tabWidth": 2,
        "trailingComma": "es5"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
